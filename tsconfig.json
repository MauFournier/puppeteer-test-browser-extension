{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2020",
		"outDir": "./lib/esm",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"declaration": true,
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["./src", "./**/*.d.ts"]
}
